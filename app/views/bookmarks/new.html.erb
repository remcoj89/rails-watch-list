<div class="container text-center">
  <h1>Add a bookmark to <%= @bookmark.comment %></h1>
  <div class="d-flex justify-content-center align-items-center">
    <%= simple_form_for [@bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.submit %>
    <% end %>
  </div>

  <p><%= link_to "back", bookmarks_path %></p>
</div>
